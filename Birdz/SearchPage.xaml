<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.SearchPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             
             Title="Birdz Search">

    <ScrollView>
        <StackLayout Margin="20" VerticalOptions="FillAndExpand">
        <Image Source="mysterybird.png" WidthRequest="300" HeightRequest="300" ></Image>
        <Label Style="{StaticResource DefaultText}"
               Text="Bird Name"/>
        <Entry Style="{StaticResource EntryField}"
               Placeholder="Robin"/>
        <Label Style="{StaticResource DefaultText}"
               Text="Bird Color"/>
        <Entry Style="{StaticResource EntryField}"
               Placeholder="Blue"/>
        <Label Style="{StaticResource DefaultText}"
               Text="Other Bird Info"/>
        <Entry Style="{StaticResource EntryField}"/>
            <Button Text="Search Birdz" HorizontalOptions="Center" VerticalOptions="Center"
                BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="32" />
        </StackLayout>
    </ScrollView>

</ContentPage>
<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Birdz"
             x:Class="Birdz.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#1DA1F2</Color>
            <Color x:Key="DefaultTextColor">White</Color>
            <Style x:Key="DefaultText"   TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="22"/>
            </Style>
            <Style x:Key="WelcomeText" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Text" Value="Welcome To Birdz"/>
            </Style>
            <Style x:Key="EntryField"   TargetType="Entry">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="PlaceholderColor" Value="LightGray"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>


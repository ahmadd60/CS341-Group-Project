<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.CallCapturePage"
             Title="Identify Bird">

    <Grid BackgroundColor="{StaticResource BackgroundColor}">
        <Label Style="{StaticResource DefaultText}"
               FontSize="Large"
               FontAttributes="Bold"
               Text="Feature not available in preview build"
               HorizontalOptions="Center"
               Padding="20"/>
        <Button Text="Record Birdz" HorizontalOptions="Center" VerticalOptions="Center"
                HeightRequest="300" WidthRequest="300" BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="32"/>
    </Grid>

</ContentPage>
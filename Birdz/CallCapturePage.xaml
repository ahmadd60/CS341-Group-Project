<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.CallCapturePage"
             Title="Call Capture">

    <Grid BackgroundColor="{StaticResource BackgroundColor}">
        <Label Text="Start Recording Birdz" HorizontalOptions="Center" VerticalOptions="Fill"
               FontSize="Header"/>
        <Button Text="Record Birdz" HorizontalOptions="Center" VerticalOptions="Center"
                HeightRequest="300" WidthRequest="300" BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="32"/>
    </Grid>

</ContentPage>